@model IEnumerable<Practice5_Model.Models.Product>

@{
	ViewData["Title"] = "Products";
}

<div class="row">
	<div class="col-10">
		<h1>Products</h1>
	</div>
	<div class="col-2 text-end">
		<a asp-action="Create" class="btn btn-primary">Create New</a>
	</div>
</div>
<table class="table mt-4">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Category)
			</th>
			<th>
				Date Added
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Price)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Category)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DateAdded)
			</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-info mx-2">Edit</a>
				<a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a>
			</td>
		</tr>
}
	</tbody>
</table>
