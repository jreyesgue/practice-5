@model Practice5_Model.Models.Inventory

@{
	ViewData["Title"] = "Delete Inventory";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Inventory?</h3>
<hr />
<div>
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Product)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Product.Name)
		</dd>
		<dt class = "col-sm-2">
			@Html.DisplayNameFor(model => model.Stock)
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.Stock)
		</dd>
		<dt class = "col-sm-2">
			Date Modified
		</dt>
		<dd class = "col-sm-10">
			@Html.DisplayFor(model => model.DateModified)
		</dd>
	</dl>
	
	<form asp-action="Delete">
		<input type="hidden" asp-for="InventoryID" />
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-light mx-2">Cancel</a>
	</form>
</div>
